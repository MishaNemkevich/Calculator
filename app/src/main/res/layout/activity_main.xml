<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ac_text"
                style="@style/MainButton"
                android:text="AC" />

            <TextView
                android:id="@+id/skob_text"
                style="@style/MainButton"
                android:text="( )" />

            <TextView
                android:id="@+id/back_text"
                style="@style/MainButton"
                android:layout_width="0dp"
                android:text="←"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/delenie_text"
                style="@style/MainButton"
                android:textSize="30sp"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/b7_text"
                style="@style/NumberButton"
                android:text="7" />

            <TextView
                android:id="@+id/b8_text"
                style="@style/NumberButton"
                android:text="8" />

            <TextView
                android:id="@+id/b9_text"
                style="@style/NumberButton"
                android:text="9" />

            <TextView
                android:id="@+id/umnojenie_text"
                style="@style/MainButton"
                android:textSize="30sp"
                android:text="×" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/b4_text"
                style="@style/NumberButton"
                android:text="4" />

            <TextView
                android:id="@+id/b5_text"
                style="@style/NumberButton"
                android:text="5" />

            <TextView
                android:id="@+id/b6_text"
                style="@style/NumberButton"
                android:text="6" />

            <TextView
                android:id="@+id/minus_text"
                style="@style/MainButton"
                android:textSize="30sp"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/b1_text"
                style="@style/NumberButton"
                android:text="1" />

            <TextView
                android:id="@+id/b2_text"
                style="@style/NumberButton"
                android:text="2" />

            <TextView
                android:id="@+id/b3_text"
                style="@style/NumberButton"
                android:text="3" />

            <TextView
                android:id="@+id/plus_text"
                style="@style/MainButton"
                android:textSize="30sp"
                android:text="+"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/point_text"
                style="@style/NumberButton"
                android:text="." />

            <TextView
                android:id="@+id/b0_text"
                style="@style/NumberButton"
                android:text="0" />

            <TextView
                android:id="@+id/twoZero_text"
                style="@style/NumberButton"
                android:text="00" />

            <TextView
                android:id="@+id/equals_text"
                style="@style/MainButton"
                android:textSize="30sp"
                android:text="="
                 />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>